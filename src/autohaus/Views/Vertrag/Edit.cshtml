@model autohaus.Models.Vertrag

@{
    ViewData["Title"] = "Editieren";
}

<h1>Editieren</h1>

<h4>Vertrag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vertragnummer" />
            <div class="form-group">
                <label asp-for="MarktId" class="control-label"></label>
                <select asp-for="MarktId" class="form-control" asp-items="ViewBag.MarktId" style="pointer-events:none;user-select:none;"></select>
                <span asp-validation-for="MarktId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BenutzerId" class="control-label"></label>
                <select asp-for="BenutzerId" class="form-control" asp-items="ViewBag.BenutzerId" style="pointer-events:none;user-select:none;"></select>
                <span asp-validation-for="BenutzerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beschreibung" class="control-label"></label>
                <input asp-for="Beschreibung" class="form-control" />
                <span asp-validation-for="Beschreibung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Erstellungsdatum" class="control-label"></label>
                <input asp-for="Erstellungsdatum" class="form-control" />
                <span asp-validation-for="Erstellungsdatum" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Gueltig" /> @Html.DisplayNameFor(model => model.Gueltig)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Liste</a>
</div>

