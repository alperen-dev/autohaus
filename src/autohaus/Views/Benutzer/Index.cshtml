@model IEnumerable<autohaus.Models.Benutzer>
@{
    KundenBenutzer kb = new KundenBenutzer();
}
@{
    ViewBag.Title = "Index";
}
<div class="row justify-content-center" style="margin-top: 5rem">
    <div class="col-md-4" style="display: flex; align-items: center;">
        <div class="card text-white bg-dark mb-3">
            @if (User.Identity.IsAuthenticated) {
                <div class="card-header">
                    Erfolgreich eingeloggt
                </div>
                <div class="card-body">
                    <p>Willkommen @User.Identity.Name! Du bist nun eingeloggt. Hier kannst du deine Daten anschauen, falls du Fragen bezüglich deiner Daten (Konto, Verträge, etc.) hast und sie ändernm, löschen etc. möchtest, bitte schreibe uns eine E-Mail oder ggf. können Sie uns anrufen. Viel Spass!</p>
                </div>
            } else {
                <div class="card-header">
                    Nicht eingeloggt!
                </div>
                <div class="card-body">
                    <p>Du bist noch nicht eingeloggt! Bitte vergewissere, dass du dich einloggst, damit du deine Daten betrachten kannst.</p>
                </div>
            }
        </div>
    </div>
</div>